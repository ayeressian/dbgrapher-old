{
  "name": "dbgrapher",
  "version": "1.0.0",
  "description": "",
  "main": "src/electron.js",
  "scripts": {
    "start": "webpack-dev-server --config=./webpack.config/webpack.config.js --mode development --open",
    "build-prod": "webpack --config=./webpack.config/webpack.config.prod.js --mode=production",
    "build-dev": "webpack --config=./webpack.config/webpack.config.js --mode=development",
    "deploy": "rm -rf dist/* && npm run build-prod && ./deploy.sh",
    "build-electron-main-prod": "webpack --mode=production --config ./webpack.config/main.webpack.config.js ",
    "build-electron-renderer-prod": "webpack --mode=production --config ./webpack.config/renderer.webpack.config.js",
    "build-electron-main-dev": "webpack --watch --mode=development --config ./webpack.config/main.webpack.config.js ",
    "build-electron-renderer-dev": "webpack --watch --mode=development --config ./webpack.config/renderer.webpack.config.js",
    "build-electron-dev": "concurrently \"npm:build-electron-main-dev\" \"npm:build-electron-renderer-dev\"",
    "build-electron-prod": "concurrently \"npm:build-electron-main-prod\" \"npm:build-electron-renderer-prod\"",
    "start-electron": "electron ./electron-dist/",
    "package-darwin": "electron-packager ./electron-dist --platform=darwin --arch=x64 --out=./package",
    "package-linux": "electron-packager ./electron-dist --platform=linux --arch=x64 --out=./package",
    "test": "mocha-webpack \"test/**/*.js\" --mode development --webpack-config=./webpack.config/webpack.test.config.js",
    "test:watch": "npm run test -- --watch",
    "test:debug": "webpack-dev-server --config webpack.config/webpack.test.debug.config.js --hot --inline"
  },
  "author": "",
  "license": "GNU 3",
  "dependencies": {
    "ajv": "^6.5.3",
    "db-viewer-component": "^3.4.2",
    "menu-bar-component": "^1.0.14",
    "normalize.css": "^8.0.0",
    "pg-query-emscripten": "^0.1.0",
    "sqlite-parser": "^1.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.0",
    "ejs-loader": "^0.3.1",
    "electron": "^4.0.0-beta.11",
    "electron-packager": "^13.1.0",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "img-loader": "^3.0.0",
    "mocha": "^6.0.2",
    "mocha-loader": "^2.0.1",
    "mocha-webpack": "^2.0.0-beta.0",
    "pg": "^7.7.1",
    "raw-loader": "^1.0.0",
    "style-loader": "^0.23.0",
    "to-string-loader": "^1.1.5",
    "url-loader": "^1.1.1",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.14"
  }
}
